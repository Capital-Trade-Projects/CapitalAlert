generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}
 
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
model File {
  id String @id @default(cuid())
  filename String
  url String
  createdAt DateTime @default(now())
  alerts AlertItems? @relation(fields: [alertId], references: [id])
  alertId Int?
}
 
model AlertItems {
  id            Int    @id @default(autoincrement())
  name          String
  responsavel   String
  dataAprovacao String
  tipoCobranca  String
  ptax          String?
  orcado        String?
  realizado     String?
  variacao      String?
  horaOrcadas   String?
  valorHora     String?
  obs           String?
  status        String
  prioridade    String
  anexos File[]
}